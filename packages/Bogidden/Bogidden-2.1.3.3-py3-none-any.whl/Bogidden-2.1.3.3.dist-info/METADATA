##is_palindrom?
================
'''

def is_palindrom(s) :
    for i in range(0, int(len(s)/2)) :
        if s[i] != s[len(s)-i-1] :
            return False

    return True
string = input('input string : ')
if is_palindrom1(string) :
    print('%s is a palindrome.' % string)
else :
    print('%s is not a palindrome.' % string)

